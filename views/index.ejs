<div class="container">
  <h1 class="display-3 py-5">Odczyty pogody</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Data</th>
        <th scope="col">Temperatura</th>
        <th scope="col">Wilgotność</th>
        <th scope="col">Ciśnienie</th>
        <th scope="col">Opis</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(d => { %>
      <tr>
        <th scope="row">
          <%= d.readingDate.toLocaleString('pl-PL', { timeZoneName: 'short' })
          %>
        </th>
        <td><%= d.temperature %> ℃</td>
        <td><%= d.humidity %>%</td>
        <td><%= d.pressure %> hPa</td>
        <td><%= d.description %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
